<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_mobile_app_group_thumb_url"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:layout_marginLeft="16dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mobile_app_group_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_question"
            android:drawablePadding="2dp"
            android:text="0.1元抢樱花小冰箱APP专享团进行中" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_mobile_app_group_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/hint_mobile_app_group"
                android:textSize="12dp"
                />

            <Button
                android:id="@+id/bt_mobile_app_group_confirm_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="@string/confirm" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>